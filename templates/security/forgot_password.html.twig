{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublie - Amissa{% endblock %}

{% block body %}
    {% include '_navbar.html.twig' %}
    <div class="container" style="max-width: 400px; margin-top: 4rem;">
        <div class="card">
            <h1 style="font-size: 1.5rem; font-weight: 700; text-align: center; margin-bottom: 1.5rem;">Mot de passe oublie</h1>

            {% if success %}
                <div class="alert alert-success" style="background-color: #d4edda; color: #155724; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
                    <strong>Email envoye !</strong><br>
                    Si un compte existe avec cette adresse email, vous recevrez un lien de reinitialisation.
                </div>
                <a href="{{ path('app_login') }}" class="btn btn-primary" style="width: 100%; text-align: center;">Retour a la connexion</a>
            {% else %}
                <p style="color: #666; margin-bottom: 1.5rem; text-align: center;">
                    Entrez votre adresse email pour recevoir un lien de reinitialisation.
                </p>

                {% if error %}
                    <div class="alert alert-error">{{ error }}</div>
                {% endif %}

                <form method="post">
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-input" required autofocus placeholder="votre@email.com">
                    </div>

                    <button type="submit" class="btn btn-primary" style="width: 100%;">Envoyer le lien</button>
                </form>

                <p style="text-align: center; margin-top: 1rem; color: #666;">
                    <a href="{{ path('app_login') }}">Retour a la connexion</a>
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}
